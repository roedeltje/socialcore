# SocialCore .htaccess
# Zorgt ervoor dat alle verzoeken naar index.php worden doorgestuurd met de juiste route parameter

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirect Trailing Slashes (behalve voor root)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]
    
    # Specifieke profile routes eerst (deze hebben voorrang)
    RewriteRule ^profile/edit/?$ index.php?route=profile/edit [QSA,L]
    RewriteRule ^profile/upload-avatar/?$ index.php?route=profile/upload-avatar [QSA,L] 
    RewriteRule ^profile/remove-avatar/?$ index.php?route=profile/remove-avatar [QSA,L]
    RewriteRule ^profile/update/?$ index.php?route=profile/update [QSA,L]

    # Daarna de algemene profile regel (ALLEEN DEZE, geen dubbele!)
    RewriteRule ^profile/([^/]+)/?$ index.php?route=profile&profile_param=$1 [QSA,L]
    
    # Admin routes - /admin/users, /admin/dashboard, etc.
    RewriteRule ^admin/([^/]+)/?$ index.php?route=admin/$1 [QSA,L]
    RewriteRule ^admin/([^/]+)/([^/]+)/?$ index.php?route=admin/$1&action=$2 [QSA,L]
    
    # FIX: Specifieke feed action routes EERST
    RewriteRule ^feed/delete/?$ index.php?route=feed/delete [QSA,L]
    RewriteRule ^feed/like/?$ index.php?route=feed/like [QSA,L]
    RewriteRule ^feed/create/?$ index.php?route=feed/create [QSA,L]
    
    # Dan pas de algemene feed routes
    RewriteRule ^feed/?$ index.php?route=feed [QSA,L]
    RewriteRule ^feed/([^/]+)/?$ index.php?route=feed/$1 [QSA,L]
    
    # Auth routes - /login, /register, /logout
    RewriteRule ^(login|register|logout)/?$ index.php?route=$1 [QSA,L]
    
    # Other specific routes
    RewriteRule ^(about|home)/?$ index.php?route=$1 [QSA,L]
    
    # Algemene regel voor alle andere routes (moet als laatste)
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^/]+)/?$ index.php?route=$1 [QSA,L]
    
    # Catch-all voor complexere routes
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]
</IfModule>

# Beveiligingsinstellingen
Options -Indexes

# Allow direct access to theme assets
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Verberg .htaccess bestand
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

# Verberg andere gevoelige bestanden
<Files "*.md">
    Order Allow,Deny
    Deny from all
</Files>

<Files "composer.*">
    Order Allow,Deny
    Deny from all
</Files>

# Cache headers voor statische bestanden
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/png "access plus 6 months"
    ExpiresByType image/jpg "access plus 6 months"
    ExpiresByType image/jpeg "access plus 6 months"
    ExpiresByType image/gif "access plus 6 months"
    ExpiresByType image/webp "access plus 6 months"
</IfModule>