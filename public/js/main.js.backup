 */
function sendMessage() {
    console.log("ðŸ“¤ sendMessage() called for", chatState.currentInterface);
    
    const { messageInput, sendButton, fileInput } = chatState.elements;
    const content = messageInput.value.trim();
    
    console.log("ðŸ“ Content:", content);
    console.log("ðŸ”’ Input disabled:", messageInput.disabled);

    // Validation
    const hasContent = !empty(content);
    const hasPhoto = fileInput && fileInput.files && fileInput.files[0];
    
    if (!hasContent && !hasPhoto) {
        console.log("âŒ Validation failed - no content or photo");
        return;
    }
    
    const maxLength = chatState.config.max_message_length || 1000;
    if (content.length > maxLength) {
        alert(`Bericht is te lang (max ${maxLength} karakters)`);
        return;
    }
    
    console.log("âœ… Validation passed");
    
    // Disable form to prevent double submission
    setFormDisabled(true);
    
    // Create FormData
    const formData = new FormData();
    formData.append('friend_id', chatState.config.friend_id);
    formData.append('content', content);
    
    // Add file if present
    if (hasPhoto) {
        console.log("ðŸ“· Adding file:", fileInput.files[0].name);
        formData.append('message_photo', fileInput.files[0]);
    }
    
    console.log("ðŸŒ Sending to:", chatState.config.urls.send);
    
    // Send request
    fetch(chatState.config.urls.send, {
        method: 'POST',
        body: formData
    })
    .then(response => {
        console.log("ðŸ“¨ Response received:", response.status);
        if (!response.ok) {
            throw new Error(`HTTP ${response.status}`);
        }
        return response.json();
    })
    .then(data => {
        console.log("ðŸ“Š Response data:", data);
        if (data.success) {
            console.log("âœ… Message sent successfully");
            
            // Clear form
            resetForm();
            
            // Reload page or add message to DOM
            if (chatState.config.features && chatState.config.features.real_time) {
                // In real-time mode, the message will appear via polling
                setTimeout(() => scrollToBottom(), 100);
            } else {
                // Reload page to show new message
                window.location.reload();
            }
        } else {
            console.log("âŒ Server error:", data.message);
            alert('Fout: ' + (data.message || 'Onbekende fout'));
            setFormDisabled(false);
        }
    })
    .catch(error => {
        console.error("ðŸ’¥ Network error:", error);
        alert('Fout bij verzenden van bericht: ' + error.message);
        setFormDisabled(false);
    });
}

